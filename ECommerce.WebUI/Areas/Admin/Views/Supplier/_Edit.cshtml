@model ECommerce.VM.ModelsVM.SupplierVM
<div class="modal-content" id="modalediting">
    <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Category Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
    </div>
    <div class="modal-body">
        @using (Ajax.BeginForm("Edit", "Supplier", new AjaxOptions { OnBegin = "OnBeginEditing", OnFailure = "OnFailureEditing", OnSuccess = "OnSuccessEditing", OnComplete = "OnCompleteEditing" }))
        {
            <div class="align-items-center justify-content-center">
                <div style="color:red;margin:10px;">
                    @Html.TextBoxFor(z => z.ID, new { @class = "form-control", @placeholder = "Brand Name", @readonly = "true" })
                    @Html.ValidationMessageFor(z => z.ID)
                </div>
                <div style="color:red;margin:10px;">
                    @Html.LabelFor(z => z.Name, new { @class = "sr-only" })
                    @Html.TextBoxFor(z => z.Name, new { @class = "form-control", @placeholder = "Brand Name", })
                    @Html.ValidationMessageFor(z => z.Name)
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        }
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
</div>