@model ECommerce.VM.ModelsVM.SupplierVM

@using (Ajax.BeginForm("Add", "Supplier", new AjaxOptions { OnBegin = "OnBegin", OnFailure = "OnFailure", OnSuccess = "OnSuccess" ,OnComplete= "OnComplete"}))
{
    <div class="align-items-center justify-content-center">
        <div style="color:red;margin:10px;">
            @Html.LabelFor(z => z.Name, new { @class = "sr-only" })
            @Html.TextBoxFor(z => z.Name, new { @class = "form-control", @placeholder = "Supplier Name", })
            @Html.ValidationMessageFor(z => z.Name)
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
 }
